<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alexpfx.github.com.fieldonmap.TestActivity"
    tools:showIn="@layout/activity_test">

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fd"
            android:scaleType="fitXY"/>

        <com.github.alexpfx.fieldonmap.lib.FieldDraw
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:selectAreaStrokeWidth="1dp"
            app:selectAreaStroke="@color/colorPrimary"
            app:selectAreaFill="@color/colorAccent"
            app:selectAreaFillAlpha="200"

            />

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
